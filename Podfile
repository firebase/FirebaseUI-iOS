source 'http://github.com/CocoaPods/Specs.git'

target 'FirebaseUI' do
  # Pods for FirebaseUI as a whole
  pod 'Firebase'
  pod 'Firebase/Database'
  pod 'Firebase/Auth'
  pod 'FBSDKLoginKit', '~> 4.0'
  pod 'GoogleSignIn', '~> 4.0'

  target 'FirebaseUITests' do
    inherit! :search_paths
    pod 'Firebase'
    pod 'Firebase/Database'
    pod 'Firebase/Auth'
    pod 'FBSDKLoginKit', '~> 4.0'
    pod 'GoogleSignIn', '~> 4.0'
  end
end

target 'Database' do
  # Pods for Database
  pod 'Firebase'
  pod 'Firebase/Database'
end

target 'Auth' do
  # Pods for Auth
  pod 'Firebase'
  pod 'Firebase/Auth'
end

target 'Facebook' do
  # Pods for Facebook Auth
  pod 'Firebase'
  pod 'Firebase/Auth'
  pod 'FBSDKLoginKit', '~> 4.0'
end

target 'Google' do
  # Pods for Google Auth
  pod 'Firebase'
  pod 'Firebase/Auth'
  pod 'GoogleSignIn', '~> 4.0'
end

